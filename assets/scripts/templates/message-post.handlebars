<div data-id="{{message._id}}" class="justify-content-center">
  {{message.owner.username}}:
  <br>
  {{message.text}}
  <div class="row justify-content-center">
    <button class="col btn btn-warning update-message" data-target="#updateMessageModal" type="button" data-toggle="modal" data-id="{{message._id}}">Update</button>
    <button class="col btn btn-danger delete-message" data-id="{{message._id}}">Delete</button>
  </div>
</div>
